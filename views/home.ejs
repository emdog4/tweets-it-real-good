
<% include ../views/header %>

<% if (locals.username) { %>
	<p><%= username %> tweets it real good. [<a href="/logout" alt="Logout">logout</a>]</p>
<% } %>

<form id="input">

	<textarea name="tweet" placeholder="What's Happening?"><% if (locals.tweet) { %><%= tweet %><% } %></textarea>
	
</form>

<div id="buttons">
	<button type="reset" form="input">Reset</button>
	<button type="submit" form="tweets_array">Tweet</button>
	<button id="reverse">Reverse Order</button>
</div>

<form id="tweets_array" action="/update" method="post"></form>

</body>

</html>

